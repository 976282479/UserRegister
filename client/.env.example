# API 配置
# 后端 API 基础 URL
VITE_API_BASE_URL=http://localhost:5000/api

# 开发服务器配置
# 前端开发服务器端口
VITE_PORT=5173
# 开发服务器主机地址
VITE_HOST=localhost

# 生产环境 API 配置示例
# VITE_API_BASE_URL=https://your-api-domain.com/api

# 应用配置
# 应用标题
VITE_APP_TITLE=用户登记系统
# 应用版本
VITE_APP_VERSION=1.0.0

# 功能开关（可选）
# 是否启用调试模式
VITE_DEBUG_MODE=true
# 是否显示开发者工具
VITE_SHOW_DEV_TOOLS=true

# 分页配置（可选）
# 默认每页显示数量
VITE_DEFAULT_PAGE_SIZE=10
# 最大每页显示数量
VITE_MAX_PAGE_SIZE=100

# 验证配置（可选）
# 用户名最小长度
VITE_USERNAME_MIN_LENGTH=3
# 用户名最大长度
VITE_USERNAME_MAX_LENGTH=20
# 年龄最小值
VITE_AGE_MIN=0
# 年龄最大值
VITE_AGE_MAX=120

# 网络配置（可选）
# API 请求超时时间（毫秒）
VITE_API_TIMEOUT=10000
# 重试次数
VITE_API_RETRY_COUNT=3