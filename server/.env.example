# Flask 应用配置
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=True

# 数据库配置
# SQLite 数据库文件路径（开发环境）
DATABASE_URL=sqlite:///users.db

# 生产环境数据库示例（取消注释并配置）
# DATABASE_URL=postgresql://username:password@localhost:5432/userregister
# DATABASE_URL=mysql://username:password@localhost:3306/userregister

# 服务器配置
HOST=127.0.0.1
PORT=5000

# CORS 跨域配置
# 允许的前端域名，多个域名用逗号分隔
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# 安全配置（生产环境必须设置）
# SECRET_KEY=your-secret-key-here

# 日志配置
# LOG_LEVEL=INFO
# LOG_FILE=app.log

# 数据库连接池配置（可选）
# DB_POOL_SIZE=5
# DB_POOL_TIMEOUT=30
# DB_POOL_RECYCLE=3600

# API 限流配置（可选）
# RATE_LIMIT_ENABLED=True
# RATE_LIMIT_DEFAULT=100 per hour

# 缓存配置（可选）
# CACHE_TYPE=simple
# CACHE_DEFAULT_TIMEOUT=300